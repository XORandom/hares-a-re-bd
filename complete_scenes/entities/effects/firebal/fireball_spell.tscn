@export var explosion_scene: PackedScene = preload(\"res://complete_scenes/entities/effects/explosion/explosion.tscn\")

@onready var effect: Node2D= $FireBallEffect
@onready var effect_animator := $FireBallEffect/AnimationPlayer


func _on_Area2D_area_entered(_area: Area2D) -> void:
	linear_velocity = Vector2.ZERO
	$Area2D.set_deferred(\"monitorable\", false)
	explode()


func explode() -> void:
	var explosion := explosion_scene.instantiate()

	add_child(explosion)
	var anim: AnimationPlayer = explosion.get_node(\"AnimationPlayer\") as AnimationPlayer
	anim.play(\"Explode\")
	effect_animator.play(\"Fade\")

	await anim.animation_finished
	explosion.queue_free()
	queue_free()
